{
    "manifest_version": 2,

    "name": "Bookmarks History",
    "description": "<-- Will be injected from package.json -->",
    "version": "<-- Will be injected from package.json -->",
    "homepage_url": "<-- Will be injected from package.json -->",

    "permissions": [
        "bookmarks",
        "storage",
        "unlimitedStorage"
    ],

    "browser_action": {
        "default_icon": {
            "16": "icons/favicon16.png",
            "32": "icons/favicon32.png",
            "48": "icons/favicon48.png",
            "128": "icons/favicon128.png"
        }
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
