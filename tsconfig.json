{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "importHelpers": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "./src/",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
      "src/**/*",
  ]
}
